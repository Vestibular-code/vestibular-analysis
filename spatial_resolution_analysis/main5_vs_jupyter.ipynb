    "    # -------------------------- 保存单张p值图 --------------------------\n",
    "    plt.subplots_adjust(\n",
    "        left=0.1, right=0.9, bottom=0.15, top=0.85\n",
    "    )\n",
    "    output_path = os.path.join(output_folder, f'{gene}_diff_p.png')\n",
